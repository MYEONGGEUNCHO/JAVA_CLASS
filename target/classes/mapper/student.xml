<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="student">
	<resultMap type="chapter07.StudentVO" id="svo">
		<result column="grade" property="year"/>
	</resultMap>
	
	<sql id="searchSql">
		<where>
			<if test="searchWord != null and searchWord != ''">
				<if test="searchType == 'all'">
					name like '%${searchWord}%' or id like '%${searchWord}%' 
				</if>
				<if test="searchType != 'all'">
					${searchType} like '%${searchWord}%'
				</if>
				
			</if>
		</where>
	</sql>
	
	<select id="count" parameterType="chapter07.StudentVO" resultType="">
		select count(*) from student		
		<include refid="searchSql"></include>
	</select>
	
<!-- 	<select id="all" resultMap="svo" parameterType="chapter07.StudentVO">  -->
	<select id="all" resultType="chapter07.StudentVO" parameterType="chapter07.StudentVO">
		select * from student
		<include refid="searchSql"></include>
	</select>
	
	<select id="view" resultType="chapter07.StudentVO" parameterType="int">
	<!-- int -> 내부적으로 Integer객체에서 자동변화시켜줌 -->
		select * from student where studno = #{studno}
	</select>
	
</mapper>